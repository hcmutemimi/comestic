@page
@using Comestic.Ulitity;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

    <div class="modal--2" id="modal__layout">
        <div class="modal__overlay"></div>
        <div class="modal__body">

            <!-- Register form -->
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="auth__form " id="form-register">
                    <div class="auth__form-container">
                        <div class="auth__form-header">
                            <h4 class="auth__form-heading" id="heading-register-from-registerform">Đăng ký</h4>

                        </div>

                        <div class="auth__form-form">
                            <div class="auth__form-group">
                                <input asp-for="Input.Name" class="auth__form-input" placeholder="Tên của bạn" />
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                            <div class="auth__form-group">
                                <input asp-for="Input.Email" class="auth__form-input" placeholder="Email của bạn" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>

                            </div>
                            <div class="auth__form-group">
                                <input asp-for="Input.Phone" class="auth__form-input" placeholder="Số điện thoại" />
                                <span asp-validation-for="Input.Phone" class="text-danger"></span>

                            </div>
                            <div class="auth__form-group">
                                <input asp-for="Input.City" class="auth__form-input" placeholder="Tỉnh/TP" />
                                <span asp-validation-for="Input.City" class="text-danger"></span>

                            </div>
                            <div class="auth__form-group">
                                <input asp-for="Input.Distric" class="auth__form-input" placeholder="Quận/huyện" />
                                <span asp-validation-for="Input.Distric" class="text-danger"></span>

                            </div>
                            <div class="auth__form-group">
                                <input asp-for="Input.StreetAdress" class="auth__form-input" placeholder="Địa chỉ nhà/tên đường" />
                                <span asp-validation-for="Input.StreetAdress" class="text-danger"></span>

                            </div>
                            <div class="auth__form-group">
                                <input asp-for="Input.Password" class="auth__form-input" placeholder="Mật khẩu" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>

                            </div>
                            <div class="auth__form-group">
                                <input asp-for="Input.ConfirmPassword" class="auth__form-input" placeholder="Nhập lại mật khẩu" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                            </div>
                        </div>
                        @if (User.IsInRole(SD.CustomerUser))
                        {
                            <div class="auth__form-aside">
                                <p class="auth__form-policy-text">
                                    Bằng việc đăng ký, bạn đồng ý với chúng tôi
                                    <a href="" class="auth__form-policy-link">Điều khoản dịch vụ </a>&
                                    <a href="" class="auth__form-policy-link">Và chính sách bảo mật</a>
                                </p>
                            </div>
                        }

                        @if (User.IsInRole(SD.ManagerUser))
                            {
                                <div class="form-register-for" style="display:flex; justify-content:space-between; margin-top:30px">
                                    <input type="radio" name="rdUserRole" value="@SD.ManagerUser" checked />@SD.ManagerUser
                                    <input type="radio" name="rdUserRole" value="@SD.EmployeeUser" checked />@SD.EmployeeUser
                                </div>
                            }
                            <div class="auth__form-controls">
                                <button class="btn control-back "><a asp-area="Customer" asp-controller="Home" asp-action="Index">TRỞ LẠI </a> </button>
                                <button type="submit" class="btn btn--primary form-control">ĐĂNG KÝ</button>
                            </div>
                        </div>
                    @*<div class="auth__form-socials">
                        <a href="" class="auth__form-socials-fa btn btn-size-s btn--with-icon">
                            <i class="auth__form-socials-icon fab fa-facebook-square"></i>
                            <span class="auth__form-socials-title">Kết nối với facebook</span>

                        </a>
                        <a href="" class="auth__form-socials-gg btn btn-size-s btn--with-icon">
                            <i class="auth__form-socials-icon fab fa-google"></i>
                            <span class="auth__form-socials-title">Kết nối với google</span>

                        </a>
                    </div>*@
                </div>
                </form>
                <!-- Login form -->
                <div class="auth__form" id="form-login">
                    <div class="auth__form-container">
                        <div class="auth__form-header">
                            <h3 clas="auth__form-heading" id="heading-login-from-loginform">Đăng nhập</h3>
                            <span class="auth__form_switch-btn" id="heading-register-from-loginform">Đăng ký </span>
                        </div>

                        <div class="auth__form-form">
                            <div cl.,ass="auth__form-group">
                                <input type="name" class="auth__form-input" placeholder="Email của bạn">
                            </div>
                            <div class="auth__form-group">
                                <input type="pass" class="auth__form-input" placeholder="Mật khẩu của bạn">
                            </div>

                        </div>
                        

                        <div class="auth__form-hepl">
                            <a href="" class="auth__form-hepl-link forget-pass">Quên mật khẩu</a>
                            <span class="auth__form-hepl-area"></span>
                            <a href="" class="auth__form-hepl-link need-hepl">Cần trợ giúp?</a>
                        </div>

                        <div class="auth__form-controls">
                            <button class="btn control-back"> <a href="./index.html"> TRỞ LẠI</a></button>
                            <button type="submit" class="btn btn-primary form-control">ĐĂNG NHẬP</button>
                        </div>
                    </div>
                    <div class="auth__form-socials">
                        <a href="" class="auth__form-socials-fa btn btn-size-s btn--with-icon">
                            <i class="auth__form-socials-icon fab fa-facebook-square"></i>
                            <span class="auth__form-socials-title">Đăng nhập với facebook</span>

                        </a>
                        <a href="" class="auth__form-socials-gg btn btn-size-s btn--with-icon">
                            <i class="auth__form-socials-icon fab fa-google"></i>
                            <span class="auth__form-socials-title">Đăng nhập với google</span>

                        </a>
                    </div>
                </div>

        </div>
    </div>
