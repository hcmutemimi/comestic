@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="modal--2" id="modal__layout">
    <div class="modal__overlay"style=" background-image: url(https://i.imgur.com/BGXjjNv.jpg); background-size: cover; background-repeat: no-repeat;"></div>
    <div class="modal__body">
      
        <form id="account" method="post">
            <div class="wrap"style="display:flex">
               
                <div class="card card-login" style="margin-top:97px">
                    <div class="card-header" style="display:flex;">
                        <div></div>
                        <img src="~/images/logoco.jpg" alt="Alternate Text"style="height: 50px; width: 50px; " />
                        <div><h4 class="account-login-title" style="        font-weight: 400;padding-top: 0;margin: 10px 140px;">Đăng nhập</h4></div>
                        
                    </div>
                    <div class="card-body">

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group row" style="margin-bottom:28px">
                            <div class="col-3 "> <label asp-for="Input.Email"></label></div>
                            <div class="col-8 email-form" style="display: flex; align-items: center;">
                                <div><i class="fas fa-envelope" style="font-size: 1.2rem; margin-right: 10px;"></i></div>
                                <div>
                                    <input asp-for="Input.Email" class="form-control" placeholder="nhập email của bạn" style="width:152%" />
                                </div>


                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger  offset-3"></span>
                        </div>

                           
                        <div class="form-group row">

                            <div class="col-3 "> <label asp-for="Input.Password"></label></div>
                            <div class="col-8  email-form" style="display: flex; align-items: center;">
                                <div><i class="fas fa-lock" style="font-size: 1.2rem; margin-right: 10px;"></i></div>
                                <div><input asp-for="Input.Password" class="form-control" placeholder="nhập password của bạn" style="width:152%" /></div>

                            </div>
                            <span  asp-validation-for="Input.Password" class="text-danger offset-3"></span>
                        </div>
