                            <div class="checkbox offset-3">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>*@
                        <div class="form-group row">
                            <div class="offset-3"> <button type="submit" class="btn btn--primary" style=" font-size: 1rem; width: 182.33px; margin-top: 20px; margin-left: 27px;">Đăng nhập</button></div>

                        </div>
                        @*<div class="form-group row">
                    <div class="offset-3"> <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></div>

                    <div class="offset-3">  <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></div>
                   

                </div>*@

                    </div>
                </div>
            </div>
           

        </form>
    </div>
</div>
<div class="" style="height:500px;"></div>
