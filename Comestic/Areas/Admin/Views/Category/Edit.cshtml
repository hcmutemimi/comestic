@model Comestic.Models.Category
@{
    ViewData["Title"] = "Edit";
}


<h2 class="text-info">Chỉnh sửa thông tin</h2>
<form method="post" asp-action="Edit">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name">Tên loại SP</label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">


            <div class="offset-4">
            </div>
            <div class="col-2">
                <input type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id" value="Cập nhật" />
            </div>
            <div class="col-2">
                <a asp-action="Index" class="btn btn-success form-control">Quay về</a>
            </div>

        </div>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

