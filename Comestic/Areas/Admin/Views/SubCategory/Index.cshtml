
@model IEnumerable<Comestic.Models.SubCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Danh mục loại sản phẩm</h2>
    </div>
    <div class="col-3 offset-3 text-right ">
        <a asp-action="Create" class="btn btn-info"> <i class="fas fa-plus"></i>&nbsp; Thêm</a>
    </div>
</div>
<br />
<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                  Tên danh mục LSP
                </th>
                <th>
                    Loại sản phẩm
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.Category.Name)
            </td>
            <td>
                <partial name="_CreateButtonPartial" model="item.Id" />
            </td>
        </tr>
            }

        </table>
    }
    else
    {
        <p class="title-noavalible">Bạn chưa có danh mục laoị sản phẩm nào !</p>
    }
</div>

