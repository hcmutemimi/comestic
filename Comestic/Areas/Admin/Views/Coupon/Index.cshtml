@model IEnumerable<Coupon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Danh sách khuyến mãi</h2>
        </div>
        <div class="col-3 offset-3 text-right">
            <a asp-action="Create" class="btn btn-info"> <i class="fas fa-plus"></i>&nbsp; Thêm</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                       Tên chương trình khuyễn mãi
                    </th>
                    <th>
                       Giảm
                    </th>
                    <th>
                        Số lượng giới hạn
                    </th>
                    <th>
                       Trạng thái
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Discount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.MinimumAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.IsActive)
                        </td>
                        <td>
                            <partial name="_CreateButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No coupons exists...</p>
        }
    </div>
</div>
