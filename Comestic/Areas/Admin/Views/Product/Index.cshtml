@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Danh sách sản phẩm</h2>
        </div>
        <div class="col-3 offset-3 text-right">
            <a asp-action="Create" class="btn btn-info"> <i class="fas fa-plus"></i>&nbsp; Thêm</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                        <th>
                           Tên sản phẩm
                        </th>
                       
                        <th>
                           Giá mới
                        </th>
                        <th>
                           Giá cũ
                        </th>
                        <th>
                           Loại sản phẩm
                        </th>
                        <th>
                           Loại danh mục sản phẩm
                        </th>
                        <th></th>
                        <th></th>
                </tr>
                @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(m => item.NewPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.OldPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.SubCategory.Name)
                        </td>
                        <td>
                            <partial name="_CreateButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                        }
            </table>
        }
        else
        {
            <p>Bạn không có sản phẩm nào để hiển thị</p>
        }
    </div>
</div>
